<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Firmware Installations</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-5">
      <div class="d-flex justify-content-end">
        <a href="/download-excel" class="btn btn-success">Download as Excel</a>
      </div>
      <h1 class="text-center">Firmware Installations</h1>
      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>ID</th>
            <th>System UID</th>
            <th>Firmware Version</th>
            <th>Installation Timestamp</th>
            <th>Verification Status</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(row => { %>
          <tr>
            <td><%= row.id %></td>
            <td><%= row.system_uid %></td>
            <td><%= row.firmware_version %></td>
            <td><%= row.installation_timestamp %></td>
            <td>
              <%= row.verification_status ? 'Verified' : 'Not Verified' %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
